<!DOCTYPE html>
<html lang="en">
	<!-- include head partial from ./views/_head.ejs -->
	<!-- this has all of our style and client-side script tags -->
	<% include ./_head %>
<body>

<!-- NAVIGATION -->

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
  		<a class="navbar-brand" href="/">Captain's Log</a>
   		<ul class="nav navbar-nav pull-right">
   			<li class="active"><a href="/">Explore</a></li>
   		 	<li class=""><a href="/profile">Profile</a></li>
   		 	<li class=""><a href="/map">My Map</a></li>
   		 	<li class=""><a href="#">Settings</a></li>
    	</ul>
  </div>
</nav>

<div class="main">
  <h1>Welcome to Captain's Log</h1>
  <p>Your go-to site for organizing and tracking your trips.</p>
  <div>
    <a href="#" data-toggle="modal" data-target=".signup-form-modal-lg" class="sign-buttons"><span id="signup-button">Sign Up</span></a>
    <a href="#" data-toggle="modal" data-target=".signin-form-modal-lg" class="sign-buttons"><span id="signin-button">Sign In</span></a>
  </div>
  <div class="search fixed-bottom">
    <form class="navbar-form navbar-center" role="search">
        <div class="form-group">
          <input id="explore-search" type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>
  </div>
</div>

<!-- SIGN UP MODAL -->

  <div class="modal fade signup-form-modal-lg" id="signup-form-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form id="signup-form">
        <h2>Sign Up</h2>
          <div class="form-group">
            <label for="inputName">Name</label>
            <input type="text" class="form-control" id="inputName" placeholder="Jane Doe" name="name" required>
          </div>
          <div class="form-group">
            <label for="inputUsername">Username</label>
            <input type="text" class="form-control" id="inputUsername" placeholder="janedoe04" name="username" required>
          </div>
          <div class="form-group">
            <label for="inputImageUrl">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Enter a password" name="password">
          </div>
          <div class="form-group">
            <label for="inputLocation">Location</label>
            <input type="text" class="form-control" id="inputLocation" placeholder="City, State" name="location" required>
          </div>
          <div class="form-group">
            <label for="inputBio">Bio</label>
            <input type="text" class="form-control" id="inputBio" placeholder="Share a bit about yourself" name="bio">
          </div>
          <div class="form-group">
            <label for="inputImageUrl">Image</label>
            <input type="text" class="form-control" id="inputImageUrl" placeholder="paste a URL to your photo" name="img">
          </div>
          <div class="text-right">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- SIGN IN MODAL -->

  <div class="modal fade signin-form-modal-lg" id="signin-form-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form id="signin-form">
        <h2>Sign In</h2>
          <div class="form-group">
            <label for="inputUsername">Username</label>
            <input type="text" class="form-control" id="inputUsername" placeholder="janedoe04" name="username" required>
          </div>
          <div class="form-group">
            <label for="inputImageUrl">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Enter a password" name="password">
          </div>
          <div class="text-right">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</body>
</html>