			<div class="col-md-9 text-center" id="profile-stream">
				<div id="log-voyage-stream">
					<button class="btn btn-default" data-toggle="modal" data-target=".log-modal-lg" type="submit">Log a voyage</button>
				</div>

<!-- Voyages -->

				<div class="media text-left">
				  <div class="media-left">
				    <a href="#">
				      <img class="media-object" src="http://i.imgur.com/XXzlRIu.png?1" alt="...">
				    </a>
				  </div>
				  <div class="media-body">
				    <h4 class="media-heading">Whistler, British Colombia</h4>
